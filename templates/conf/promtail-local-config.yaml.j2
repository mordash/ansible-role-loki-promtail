# {{ ansible_managed }}
server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://{{ promtail_destination_server }}:{{ promtail_destination_server_port }}/loki/api/v1/push

scrape_configs:
{% if promtail_haproxy_log is defined %}
  # node exporter #
- job_name: haproxy
  static_configs:
  - targets:
      - localhost
    labels:
      host: {{ ansible_hostname }}
      job: haproxy
      __path__: {{ promtail_haproxy_log_path }}
{% endif %}
{% if promtail_apache2_log is defined %}
- job_name: apache2
  static_configs:
  - targets:
      - localhost
    labels:
      host: {{ ansible_hostname }}
      job: apache2
      __path__: {{ promtail_apache2_log_path }}
{% endif %}
